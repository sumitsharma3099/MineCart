<div class="flex items-center justify-center h-screen">
  <div class="w-full max-w-md border rounded-lg p-5 bg-white">
    <h2 class="text-2xl font-semibold mb-4">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: 'block text-gray-700 text-sm font-bold mb-2' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
      </div>

      <div class="mb-4">
        <%= f.submit "Send me reset password instructions", class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
