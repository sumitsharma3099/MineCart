<div class="p-5">
  <!-- Page Title -->
  <h1 class="text-3xl font-semibold mb-6">Product Store</h1>

  <!-- Product Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <% @products.each do |product| %>
      <!-- Product Card -->
      <div class="bg-white p-6 rounded-lg shadow-md">
        <%= image_tag(product.image_url, class: 'w-full h-32 object-cover mb-4') %>
        
        <!-- Product Information -->
        <h2 class="text-xl font-semibold mb-2"><%= product.name %></h2>
        <p class="text-gray-600 mb-4"><%= product.description %></p>
        
        <!-- Product Price -->
        <span class="text-blue-500 font-bold"><%= number_to_currency(product.price) %></span>
        
        <!-- Add to Cart Button -->
        <%= link_to 'Add to Cart', add_product_to_cart_path(product.id), class: 'mt-4 bg-blue-500 text-white py-2 px-4 rounded-full block text-center' %>
      </div>
      <!-- End of Product Card -->
    <% end %>
  </div>
  <!-- End of Product Grid -->
</div>
<!-- End of Container -->
